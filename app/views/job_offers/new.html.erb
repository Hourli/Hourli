<div class="container">
  <div class="row">
    <div class="col-xs-offset-4 col-xs-4 col-xs-offset-4">
      <br><br><br>
      <div class="text-center">
        <% if params[:job_request].present? %>
            <h2>
              Create a Job Offer for:  <%= JobRequest.find(params[:job_request]).title %>
            </h2>
            <%= bootstrap_form_for(@job_offer, label_errors: true, url: job_offers_path(:job_request => params[:job_request]), :method => :post) do |f| %>
                <%= f.text_field :title, autofocus: true %>
                <%= f.text_area :description %>
                <%= f.number_field :hourly_rate, step: "0.01" %>

                <%= f.submit "Create Job Offer", class: "btn btn-primary", id: "create_job_offer" %>
            <% end %>
        <% else %>
            <h2> How did you get here? </h2>
        <% end %>
      </div>
    </div>
  </div>
</div>
