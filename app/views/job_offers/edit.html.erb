<div class="container">
  <div class="row">
    <div class="col-xs-offset-4 col-xs-4 col-xs-offset-4">
      <br><br><br>
      <div class="text-center">
        <h2>
          Edit Job Offer
        </h2>
        <%= bootstrap_form_for(@job_offer, label_errors: true, url: job_offer_path(:job_request => params[:job_request]), :method => :put) do |f| %>
            <%= f.text_field :title, autofocus: true %>
            <%= f.text_area :description %>
            <%= f.number_field :hourly_rate, step: "0.01" %>

            <%= f.submit "Update", class: "btn btn-primary", id: "update_job_offer" %>
            <%= link_to 'Cancel', job_offer_path(@job_offer), class: "btn btn-primary",
                        id: "cancel_job_offer_edit" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
