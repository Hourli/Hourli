<div class="container">
  <div class="row">
    <div class="col-xs-offset-4 col-xs-4 col-xs-offset-4">
      <br><br><br>
      <div class="text-center">
        <h2>
          Create a Job Request
        </h2>
          <%= bootstrap_form_for(@job_request, label_errors: true, url: job_requests_path, :method=>:post) do |f| %>
          <%= f.text_field :title, autofocus: true %>
          <%= f.text_area :description %>
          <%= f.text_field :location%>
          <%= f.number_field :hourly_rate, step:"0.01"%>
          <%= f.date_field :start_date %>
          <%= f.date_field :end_date %>
          <%= f.text_area :categories%>
        
          <%= f.submit "Create Job Request", class: "btn btn-primary", id: "create_job_request" %>
      <% end %>
      </div>
    </div>
  </div>
</div>
