<div class="container">
  <div class="row">
    <div class="col-sm-offset-4 col-sm-4 col-sm-offset-4">
      <br><br><br>

      <h4>
        <strong>Job Title:</strong>
        <%= @job.name %>
      </h4>

      <h4>
        <strong>Job Description:</strong>
        <%= @job.description %>
      </h4>

      <h4>
        <strong>Job Location:</strong>
        <%= @job.location %>
      </h4>

      <h4>
        <strong>Start Date:</strong>
        <%= @job.start_date %>
      </h4>

      <h4>
        <strong>End Date:</strong>
        <%= @job.end_date%>
      </h4>

      <h4>
        <strong>Completed:</strong>
        <% if @job.completed %>
            <i class="fa fa-1x fa-check-square" aria-hidden="true"></i>
        <% else %>
            <i class="fa fa-1x fa-times" aria-hidden="true"></i>
        <% end %>
      </h4>

      <div>
        <h4><strong>Tasks for this job:</strong></h4>
        <% if @tasks.empty? %>
            You do not have any tasks, create one <%= link_to 'here', new_job_task_path(@job) %>
        <% else %>
            <ul class="list-group">
              <% @tasks.each do |task| %>
                  <li class="list-group-item">
                    <div class="pull-right">
                      <%= link_to 'Edit', edit_job_task_path(@job.id, task.id), id: "edit_#{task.id}" %>
                    </div>
                    <strong>Title:</strong> <%= task.title %>
                    <br>
                    <strong>Description:</strong> <%= task.description %>
                    <br>
                    <strong>Completed:</strong> <%= content_tag :i, '', class: ((task.completed) ? 'fa fa-1x fa-check-square' : 'fa fa-1x fa-times'), id: "task_#{task.id}" %>
                    <br>
                    <strong>Duration:</strong> (in minutes) <%= task.duration %>
                  </li>
              <% end %>
            </ul>

        <% end %>
      </div>
      <br>
      <%= link_to 'Back to all jobs', jobs_path, class: 'btn btn-xs btn-back' %>
      <%= link_to 'Edit job' , edit_job_path(@job), class: 'btn btn-xs btn-primary' %>
      <%= link_to 'Delete this job', job_path(@job),
                  method: :delete,
                  data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
    </div>
  </div>
</div>
