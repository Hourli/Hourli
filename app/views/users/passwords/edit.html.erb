<div class="container">
  <div class="row">
    <div class="col-xs-offset-4 col-xs-4 col-xs-offset-4">
      <br>
      <h2 class="text-center">Change your password</h2>
      <br>

      <%= bootstrap_form_for(resource, label_errors: true, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f| %>
          <%= f.hidden_field :reset_password_token %>

          <%= f.password_field :password, autofocus: true, autocomplete: "off", help: "(8 characters minumum)" %>

          <%= f.password_field :password_confirmation, autocomplete: "off" %>

          <%= f.submit "Change my password", class: "btn btn-primary" %>
      <% end %>
      <br>
      <%= render "users/shared/links" %>

    </div>
  </div>
</div>



